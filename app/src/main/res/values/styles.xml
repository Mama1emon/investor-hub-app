<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/textSize_headline1</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra_small</item>
        <item name="android:textColor">@color/colorTitlePrimary</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/textSize_headline2</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra_medium</item>
        <item name="android:textColor">@color/colorTitleSecondary</item>
        <item name="android:translationY">-1.03sp</item>
    </style>

    <style name="Base.Widget.AppCompat.EditText.SearchLine" parent="Base.Widget.AppCompat.EditText">
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra_large</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_xmedium</item>
        <item name="android:paddingEnd">@dimen/padding_large_small</item>
        <item name="android:paddingBottom">@dimen/padding_xmedium</item>
        <item name="android:textColor">@color/colorTitlePrimary</item>
        <item name="android:textColorHint">@color/colorTitlePrimary</item>
        <item name="android:textSize">@dimen/textSize_headline3</item>
    </style>
</resources>